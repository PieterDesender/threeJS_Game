{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Detectizr": false
  }, 
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  }
}